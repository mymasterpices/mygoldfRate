<div class="priceBrackUp">
  <button class="priceBreakup">
    <img src="data:image/png;base64,">
    <span>Price Breack-Up</span>
  </button>
</div>

<style>
  button.priceBreakup {
    background: transparent;
    border: 1px solid #250331;
    padding: 10px 20px;
    color: #250331;
    display: flex;
    justify-content: center;
    align-items: center;
    column-gap: 5px;
    transition: all 0.5s ease-in-out;
    width: 100%;
    margin-top: -15px;
    border-radius: 50px;
  }
  button.priceBreakup:hover {
    background: #250331;
    color: #fff;
  }
  button.priceBreakup:hover img {
    filter: invert(1);
  }
</style>

{% comment %}
  {% assign avg_rating = block.settings.product.metafields.demo.avg_rating.value | round %}
  <span style="color:{{ block.settings.colour }}">
    {% render 'stars', rating: avg_rating %}
  </span>
  {% if avg_rating >= 4 %}
    <br>
    <img src="{{ "thumbs-up.png" | asset_img_url: '15x' }}" height="15" width="15" loading="lazy">
    {{ 'ratings.home.recommendationText' | t }}
  {% endif %}
{% endcomment %}

{% schema %}
{
  "name": "Price Break-Up",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#000000" }
  ]
}
{% endschema %}
